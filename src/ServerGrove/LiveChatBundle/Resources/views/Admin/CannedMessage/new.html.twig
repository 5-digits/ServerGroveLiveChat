{% extends "ServerGroveLiveChatBundle::admin-layout.html.twig" %}

{% block h1 %}Canned Message creation{% endblock %}

{% block content %}
<h1></h1>

<form class="form-horizontal" action="{{ path('sglc_admin_canned_messages_create') }}" method="post" {{ form_enctype(form) }}>
    {{ form_widget(form) }}
    <p class="form-actions">
        <button class="btn btn-primary" type="submit">Create</button>
        <a class="btn" href="{{ path('sglc_admin_canned_messages') }}">
            Cancel
        </a>
    </p>
</form>
{% endblock %}
