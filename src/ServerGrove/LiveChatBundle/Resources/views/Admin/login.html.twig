{% extends "ServerGroveLiveChatBundle::admin-layout.html.twig" %}
{% form_theme form 'ServerGroveLiveChatBundle:Admin:form.html.twig' %}


{% block content %}
<div class="span8 offset2">
<h3>Please enter your e-mail and password to access the admin panel</h3>
<form action="{{ path('_security_check') }}" method="post" class="well">

    {{ form_widget(form) }}

    <p class="actions">
        <button type="submit" class="btn btn-primary">Login</button>
    </p>

</form>
</div>
<script type="text/javascript">
    jQuery(document).ready(function() {
        jQuery(':text').focus();
    });
</script>
{% endblock %}
