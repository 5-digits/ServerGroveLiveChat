{% extends "ServerGroveLiveChatBundle::admin-layout.html.twig" %}

{% block h1 %}Operator Departments{% endblock %}

{% block content %}

{% set route = department.getId() ? 'sglc_admin_operator_department_edit' : 'sglc_admin_operator_department' %}
{% set vars = department.getId() ? {'id': department.getId()} : {} %}
<script type="text/javascript">
    jQuery(document).ready(function() {
        jQuery(':text:first').focus();
    });
</script>

<form action="{{ path(route, vars) }}" method="post" class="form-horizontal">
    {% if department.getId() %}
    <legend>Edit department "{{department.getName()}}"</legend>
    {% else %}
    <legend>Add new department</legend>
    {% endif %}

    {{ form_widget(form) }}

    <div class="form-actions">
        <button class="btn btn-primary" type="submit">Submit</button>
        <a class="btn" href="{{ path('sglc_admin_operator_departments') }}">Cancel</a>
    </div>
</form>
{% endblock %}
