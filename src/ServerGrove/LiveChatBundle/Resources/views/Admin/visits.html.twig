{% extends "ServerGroveLiveChatBundle::admin-layout.html.twig" %}

{% block h1 %}Visits list{% endblock %}

{% block content %}
<table class="table">
    <thead>
        <tr>
            <th class="span3">
                Id
            </th>
            <th class="span2">
                Created At
            </th>
            <th>
                Visit Key
            </th>
            <th class="span3">
                Visitor
            </th>
            <th class="span2">
                Remote Addr
            </th>
            <th class="span3">
                Local Time
            </th>
            <th class="span1">
                Hits
            </th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <td colspan="7" style="text-align: right;">
            {% include "ServerGroveLiveChatBundle:Admin:pager.html.twig" with {'pages': pages, 'route': 'sglc_admin_visits'} %}
            </td>
        </tr>
    </tfoot>
    <tbody>
        {% if visits %}
        {% for visit in visits %}
        <tr>
            <td>
                {{visit.getId()}}
            </td>
            <td style="text-align: center;">
                {{visit.getCreatedAt().format('Y-m-d H:i:s')}}
            </td>
            <td>
                {{visit.getKey()}}
            </td>
            <td>
                {% spaceless %}
                <a target="_blank" href="{{ path('sglc_admin_visitor', {'id': visit.getVisitor().getId()})}}">
                    {{visit.getVisitor().getId()}}
                </a>
                {% endspaceless %}
            </td>
            <td>
                {{visit.getRemoteAddr()}}
            </td>
            <td>
                {{visit.getLocalTime()}}
            </td>
            <td style="text-align: center;">
                {{visit.getHits().count()}}
            </td>
        </tr>
        {% endfor %}
        {% endif %}
    </tbody>
</table>
{% endblock %}