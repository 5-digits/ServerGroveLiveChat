if ( jQuery('#chatDiv').length > 0 ) {
	jQuery('#chatDiv').html('');
} else {
    SGChatTracker.Chat.createInvite();
}

var div = document.createElement('div');

jQuery('#chatDiv').html('').append(
    jQuery(new Image()).attr({src: "{{asset('/bundles/servergrovelivechat/images/sg_logo.jpg')}}"})
).append(
    jQuery(document.createElement('div')).attr({
        style: 'clear: both; padding: 10px;'
    }).html('Chat Invitiation: may I help you with anything?').append(
        jQuery(document.createElement('a')).attr({
            href: '#'
        }).html('Yes').click(function(){
            window.open('{{url("sglc_chat_invite_accept", {"id": "__chatId__"})}}'.replace('__chatId__', '{{chat.getId()}}'), 'livechat{{chat.getId()}}', 'width=700,height=600,toolbar=no,location=no');
            jQuery('#chatDiv').hide();
            return false;
        })
    ).append('&nbsp;&nbsp;&nbsp;').append(
        jQuery(document.createElement('a')).attr({
            href: '#'
        }).html('No').click(function(){
            jQuery.ajax({
                type: 'GET',
                url: "{{ url('sglc_chat_invite_reject', {'id': chat.getId()})}}",
                cache: false
            });
            jQuery('#chatDiv').hide();
            return false;
        })
    )
).show().css({
    position: "absolute",
    top: 8 + jQuery(document).scrollTop() + 'px'
});